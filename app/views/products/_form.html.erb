<% if @product.errors.any? %>
	<div id="error_explanation">
		<h3>O formulario possui os seguintes erros:</h3>
	</div>
<% end %>
<%= form_for @product do |f| %>
		<div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
			<%= error_tag @product, :name %>
    </div>
		<div class="field">
    	<%= f.label :price %>
    	<%= f.number_field :price %>
			<%= error_tag @product, :price %>
		</div>
		<div class="field">
    	<%= f.label :mark %>
    	<%= f.text_field :mark %>
			<%= error_tag @product, :mark %>
		</div>
		<div class="field">
    	<%= f.label :description%>
    	<%= f.text_area :description %>
			
		</div>
  	<div class="row">
    	<div class="span1 actions">
      	<%= f.submit :class => 'btn btn-primary' %>
    	</div>
  	</div>
<% end %>
</panel>
