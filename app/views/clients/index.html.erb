<h1>Listing Clients</h1>

<table class="table">
<%= link_to 'New client', new_client_path, class: 'btn btn-primary' %>
  <thead>
    <tr>
      <th>Name</th>
      <th>CPF</th>
      <th>Location</th>
      <th>Salary</th>
      <th>Sales</th>
      <th><center>Actions</center></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.name %></td>
        <td><%= client.cpf %></td>
        <td><%= client.location %></td>
        <td><%= client.salary %></td>
        <td><% client.sales.each do |sale| %>
          <%= sale.value %></td>
          <% end %>
          <%= client.sales.count %>
        <td>
          <center>
            <%= link_to 'Show', client %>
            <%= link_to 'Edit', edit_client_path(client) %>
            <%= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' } %>
          </center>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
